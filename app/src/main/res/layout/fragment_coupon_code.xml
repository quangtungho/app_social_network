<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/main_bg"
            app:tabSelectedTextColor="@color/main_bg"
            app:tabTextColor="@color/nobel">
        </com.google.android.material.tabs.TabLayout>
    <include layout="@layout/view_divider_thin"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerCouponCode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>