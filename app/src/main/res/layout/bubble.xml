<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bubble_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_red"
        android:id="@+id/bubble_notifications"
        android:paddingTop="0dp"
        android:paddingBottom="1.25dp"
        android:paddingStart="5.25dp"
        android:paddingEnd="5.25dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_gravity="left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bubble_notifications_text"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="1"
            android:textColor="#fff">

        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlLogoBubble"
        android:layout_width="@dimen/size_19"
        android:layout_height="@dimen/size_20"
        android:background="@drawable/circle_white"
        android:layout_gravity="bottom|center"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:id="@+id/bubble_logo"
            app:cardCornerRadius="@dimen/size_8">
            <ImageView
                android:id="@+id/bubble_notifications_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/alo_party"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</FrameLayout>