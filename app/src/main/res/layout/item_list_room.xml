<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_5"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginTop="@dimen/margin_12dp"
        android:background="@drawable/bg_white_shadow"
        android:padding="5dp"
        android:id="@+id/lnBgOrder"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnStatusGame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_main_corner_top">

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/txtGameId"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center|start"
                android:textStyle="bold"
                android:paddingStart="@dimen/font_large"
                tools:ignore="RtlSymmetry" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/txtGameStatus"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingStart="@dimen/font_large"
                android:layout_weight="1"
                tools:ignore="NestedWeights,RtlSymmetry" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/txtUserCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center|start"
                android:drawablePadding="@dimen/padding_4dp"
                android:drawableStart="@drawable/ic_group_game"
                android:paddingEnd="@dimen/font_large"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:background="#f3f8fc"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnOrderDetail"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f8fc"
                android:layout_weight="1">

                <vn.techres.line.widget.TechResTextViewBold
                    android:id="@+id/txtRoom_Name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#F9F9FA"
                    android:gravity="center"
                    android:text="Phòng 1"
                    android:textColor="@color/gray_text_title"
                    android:textSize="@dimen/font_largexxx"
                    tools:ignore="NestedWeights" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/txt_room_brach_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_big"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:background="#f3f8fc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@color/white">

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/txtRoundCount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_largexxxxx"
                    android:text="Vòng 1"
                    android:textColor="@color/red"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:padding="@dimen/padding_3dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.techres.line.widget.TechResTextView
                        android:padding="@dimen/size_5"
                        android:id="@+id/txtTimeStart"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/font_largexxxxx"
                        android:drawableStart="@drawable/ic_clock_black"
                        android:text="13/10/2020"
                        android:drawablePadding="@dimen/padding_4dp"
                        android:gravity="center|start" />

                    <ImageView
                        android:id="@+id/imgRestaurant"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_rose" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_gray_corner_bottom"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingLeft="@dimen/padding_4dp"
            android:paddingRight="@dimen/padding_4dp"
            android:paddingBottom="@dimen/padding_5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:background="@color/white"
                android:src="@drawable/ic_split_point_on_bill"
                android:contentDescription="@string/default_image"/>

            <ImageButton
                android:id="@+id/btnGift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_gift_main"
                android:gravity="center"
                android:contentDescription="@string/default_image"/>

            <ImageButton
                android:id="@+id/btnListRank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:src="@drawable/ic_assign_main"
                android:contentDescription="@string/default_image"/>

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/txtStatusGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_play_game"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/size_10"
                android:paddingTop="4dp"
                android:paddingEnd="@dimen/size_10"
                android:paddingBottom="4dp"
                android:text="@string/joining"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</layout>



