<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <merge>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:background="@color/gray_background"
            android:padding="@dimen/padding_10dp"
            android:id="@+id/lnContactPermission">

            <vn.techres.line.widget.TechResTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/padding_10dp"
                android:textSize="@dimen/font_small"
                android:text="Hiện tại bạn chưa cấp quyền truy cập cho danh bạ, vui lòng cho phép để có trải nghiệm tốt nhất." />

            <Button
                android:id="@+id/btnTurnOn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35"
                android:text="Bật"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/border_orange_50dp" />
        </LinearLayout>
    </merge>
</layout>