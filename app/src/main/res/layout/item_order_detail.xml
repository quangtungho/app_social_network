<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:weightSum="12"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_100"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/imgFoodOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnFoodInformation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:weightSum="2"
            android:orientation="vertical">
            <vn.techres.line.widget.TechResTextViewBold
                android:id="@+id/tvNameFoodOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/title_food"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:textSize="@dimen/font_big"
                tools:ignore="NestedWeights" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:orientation="horizontal">
                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvPriceFoodOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_price"/>
                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvAmountFoodOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:text="@string/amount_food"/>
            </LinearLayout>
            <vn.techres.line.widget.TechResTextView
                android:id="@+id/tvNoteFoodOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/title_food"
                android:layout_marginStart="@dimen/margin_5dp"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:orientation="vertical">
            <vn.techres.line.widget.TechResTextViewBold
                android:id="@+id/tvPriceToTalOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|top"
                android:paddingTop="@dimen/margin_10dp"
                android:text="@string/title_price"
                android:textSize="@dimen/font_normal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>