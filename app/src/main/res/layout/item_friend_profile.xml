<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cvFriend"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFriend"
                android:layout_width="@dimen/size_120"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description_place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/txtFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingEnd="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:text="Phạm Văn Nhân"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imgFriend"
                app:layout_constraintStart_toStartOf="@+id/imgFriend"
                app:layout_constraintTop_toBottomOf="@+id/imgFriend" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>