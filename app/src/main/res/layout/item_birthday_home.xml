<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <merge>
        <RelativeLayout
            android:id="@+id/rlBirthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:layout_marginStart="@dimen/size_35"
            android:layout_marginEnd="-70dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_110"
                app:cardCornerRadius="50dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100"
                    android:background="@drawable/corners_blue">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="98dp"
                        android:layout_height="@dimen/size_100"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/size_30"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="birthday_box.json"
                        app:lottie_loop="true"
                        tools:ignore="RtlHardcoded" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <vn.techres.line.widget.TechResTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/size_30"
                            android:text="@string/alerbirthday"
                            android:textColor="@color/white" />

                        <vn.techres.line.widget.TechResTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/size_30"
                            android:text="@string/clickgift"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </merge>

</layout>