<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical">
    <View
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_4"
        android:layout_gravity="center"
        android:background="@drawable/border_gray_40dp"
        android:layout_margin="@dimen/margin_10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/size_30">
        <ImageView
            android:id="@+id/imgAvatarNotify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/default_image" />
    </androidx.cardview.widget.CardView>
    <vn.techres.line.widget.TechResTextView
        android:id="@+id/tvContentNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/font_normal"
        android:layout_margin="@dimen/margin_8dp"
        />
    <Button
        android:id="@+id/btnTurnOffNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_notify"
        android:textAllCaps="false"
        android:background="@color/white"
        android:gravity="center|start"
        android:drawablePadding="@dimen/padding_8dp"
        android:drawableStart="@drawable/ic_recycle_bin_24dp"
        android:drawableTint="@color/black"
        android:paddingLeft="@dimen/padding_16dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <Button
        android:id="@+id/btnSeenNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seen_notify"
        android:textAllCaps="false"
        android:background="@color/white"
        android:gravity="center|start"
        android:drawablePadding="@dimen/padding_8dp"
        android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
        android:drawableTint="@color/black"
        android:paddingLeft="@dimen/padding_16dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
</LinearLayout>