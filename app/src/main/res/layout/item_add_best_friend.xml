<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp"
        android:background="@drawable/selecter_click_white">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="@dimen/size_25"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgFriendAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/default_image"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_gray_load" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtFriendName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Phạm Văn nhân"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp" />

        <RadioButton
            android:id="@+id/rbAddBestFriend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/selector_radio_button_member"
            android:layout_marginEnd="@dimen/margin_20dp" />
    </LinearLayout>
</layout>