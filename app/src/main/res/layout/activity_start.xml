<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_topbar"
    tools:context="vn.techres.photo.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.72">

            <ImageView
                android:id="@+id/mainBG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:src="@drawable/bg_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pipImg"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_255sdp"
                        tools:src="@drawable/main_pip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/app_name"
                        android:textColor="@color/btn_text_color"
                        android:textSize="@dimen/_22sdp"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_18sdp"/>

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        tools:src="@drawable/logo_line_horizontal" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/menuBtn"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/home_menu_btn"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:tint="@color/btn_icon_color"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/h_menu" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.28"
            android:gravity="center"
            android:padding="@dimen/_7sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/clgMakerBtn"
                        android:layout_width="@dimen/_47sdp"
                        android:layout_height="@dimen/_47sdp"
                        android:padding="@dimen/_8sdp"
                        android:tint="@color/btn_icon_color"
                        android:background="@drawable/home_btn"
                        android:src="@drawable/h_layout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/btn_text_color"
                        android:text="@string/photo_collage"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/photoEditBtn"
                        android:layout_width="@dimen/_47sdp"
                        android:layout_height="@dimen/_47sdp"
                        android:padding="@dimen/_8sdp"
                        android:tint="@color/btn_icon_color"
                        android:background="@drawable/home_btn"
                        android:src="@drawable/h_editor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:textColor="@color/btn_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/photo_editor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pipMakerBtn"
                        android:layout_width="@dimen/_47sdp"
                        android:layout_height="@dimen/_47sdp"
                        android:padding="@dimen/_8sdp"
                        android:tint="@color/btn_icon_color"
                        android:background="@drawable/home_btn"
                        android:src="@drawable/h_pip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/btn_text_color"
                        android:text="@string/pip_collage"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/scrapBtn"
                        android:layout_width="@dimen/_47sdp"
                        android:layout_height="@dimen/_47sdp"
                        android:padding="@dimen/_8sdp"
                        android:tint="@color/btn_icon_color"
                        android:background="@drawable/home_btn"
                        android:src="@drawable/h_scrap" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/btn_text_color"
                        android:text="@string/scrap_book"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/albumBtn"
                        android:layout_width="@dimen/_47sdp"
                        android:layout_height="@dimen/_47sdp"
                        android:padding="@dimen/_8sdp"
                        android:tint="@color/btn_icon_color"
                        android:background="@drawable/home_btn"
                        android:src="@drawable/h_creation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:textColor="@color/btn_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/my_creation"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/imgBack"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:background="@drawable/border_gray_light_50dp"
        android:src="@drawable/ic_action_navigation_arrow_back"
        tools:ignore="ContentDescription" />
</RelativeLayout>