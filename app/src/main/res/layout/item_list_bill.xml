<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_8dp">

        <View
            android:layout_width="1.2dip"
            android:layout_height="fill_parent"
            android:background="@color/gray_btn_bg_pressed_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_4dp">

                <LinearLayout
                    android:id="@+id/lnNameFoodBill"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical"
                    tools:ignore="RtlSymmetry">

                    <vn.techres.line.widget.TechResTextViewLight
                        android:id="@+id/tvNameFoodBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#f0000000"
                        android:textSize="@dimen/font_normal" />

                    <vn.techres.line.widget.TechResTextView
                        android:id="@+id/tvStatusFoodBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#f0000000"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <vn.techres.line.widget.TechResTextViewLight
                    android:id="@+id/tvCountFoodBill"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center|end"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/font_normal" />

                <vn.techres.line.widget.TechResTextViewLight
                    android:id="@+id/tvUnitPrice"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center|end"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgGiftBill"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_gift_box"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <vn.techres.line.widget.TechResTextViewLight
                        android:id="@+id/tvTotalFoodAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/font_normal"
                        tools:ignore="RtlSymmetry" />

                    <vn.techres.line.widget.TechResTextViewLight
                        android:id="@+id/tvTotalFoodPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/font_normal"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>


            </LinearLayout>

            <vn.techres.line.widget.TechResTextViewLight
                android:id="@+id/noteBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_4dp"
                android:text="@string/phone_invoice_footer_note"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_normal"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:background="@drawable/line_point" />
        </LinearLayout>

        <View
            android:layout_width="1.2dip"
            android:layout_height="fill_parent"
            android:background="@color/gray_btn_bg_pressed_color" />
    </LinearLayout>
</layout>