<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/size_45"
                android:layout_height="@dimen/size_45"
                android:src="@drawable/back"
                android:padding="@dimen/size_15"
                app:tint="@color/black"/>
            <vn.techres.line.widget.TechResTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/edit_posts"
                android:textSize="@dimen/font_big"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_20dp"/>

            <Button
                android:id="@+id/txtPost"
                android:layout_width="63dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:background="@drawable/bg_button_orange_radius"
                android:text="@string/post"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/gray"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/margin_10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_10dp">
                        <RelativeLayout
                            android:layout_width="@dimen/size_40"
                            android:layout_height="@dimen/size_40"
                            tools:ignore="UselessParent">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/size_20">
                                <ImageView
                                    android:id="@+id/imgAvatar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/description_place_image"/>
                            </com.google.android.material.card.MaterialCardView>
                        </RelativeLayout>

                        <vn.techres.line.widget.TechResTextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Phạm Văn Nhân"
                            android:layout_marginStart="@dimen/margin_15dp"
                            android:layout_marginEnd="@dimen/margin_5dp"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnEditReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/place_review"
                        android:textSize="@dimen/font_big"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:id="@+id/lnChooseBranch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_90"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_10dp"
                        android:layout_margin="@dimen/margin_10dp"
                        android:background="@drawable/background_choose_branch">

                        <vn.techres.line.widget.TechResTextView
                            android:id="@+id/txtChooseBranch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/click_restaurant_review"
                            android:textSize="@dimen/font_big"
                            android:drawableStart="@drawable/ic_location_on_black_24dp"
                            android:drawablePadding="@dimen/padding_10dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgAvatarBranch"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_restaurant_image_holder"
                                android:layout_gravity="center"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center|start">
                                <vn.techres.line.widget.TechResTextView
                                    android:id="@id/txtBranchName"
                                    style="@style/TvBody"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/margin_6dp"
                                    android:maxLines="1"
                                    android:paddingLeft="@dimen/padding_12dp"
                                    android:paddingRight="@dimen/padding_12dp"
                                    android:tag="binding_4"
                                    android:text="@string/name_restaurant_review"
                                    android:visibility="visible"/>

                                <vn.techres.line.widget.TechResTextView
                                    android:id="@id/txtBranchAddress"
                                    style="@style/TvCaption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_check_in_primary"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/padding_8dp"
                                    android:paddingEnd="@dimen/padding_12dp"
                                    android:tag="binding_5"
                                    android:text="@string/address"
                                    android:visibility="visible"
                                    tools:ignore="UseCompatTextViewDrawableXml" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/rating"
                        android:textSize="@dimen/font_big"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/margin_12dp"
                        android:layout_marginTop="@dimen/margin_10dp"/>

                    <LinearLayout
                        android:id="@+id/lnClickReviewPopup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginStart="@dimen/margin_12dp"
                        android:layout_marginEnd="@dimen/margin_12dp"
                        android:gravity="center">

                        <RatingBar
                            android:id="@+id/rbRate"
                            style="@style/CustomRatingBarBig"
                            android:clickable="false"
                            android:isIndicator="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_12dp"
                        android:paddingTop="@dimen/padding_8dp"
                        android:paddingRight="@dimen/padding_12dp"
                        android:paddingBottom="@dimen/padding_8dp"
                        android:layout_margin="@dimen/margin_12dp"
                        android:background="@drawable/background_choose_branch"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtTitle"
                            style="@style/TvBody"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@color/white_color"
                            android:gravity="top"
                            android:hint="@string/hint_input_title_review"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="2"
                            android:maxLength="250">
                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_12dp"
                        android:paddingTop="@dimen/padding_8dp"
                        android:paddingRight="@dimen/padding_12dp"
                        android:paddingBottom="@dimen/padding_8dp"
                        android:layout_marginStart="@dimen/margin_12dp"
                        android:layout_marginEnd="@dimen/margin_12dp"
                        android:layout_marginBottom="@dimen/margin_12dp"
                        android:background="@drawable/background_choose_branch"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtComment"
                            style="@style/TvBody"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:background="@color/white_color"
                            android:gravity="top"
                            android:hint="@string/hint_input_review"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="2"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tag_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnEditTitlePost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_12dp"
                    android:paddingTop="@dimen/padding_8dp"
                    android:paddingRight="@dimen/padding_12dp"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:background="@drawable/background_choose_branch"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtTitlePost"
                        style="@style/TvBody"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@color/white_color"
                        android:gravity="top"
                        android:hint="@string/hint_input_title_post"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="2"
                        android:maxLength="250">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnEditPost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_12dp"
                    android:paddingTop="@dimen/padding_8dp"
                    android:paddingRight="@dimen/padding_12dp"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:background="@drawable/background_choose_branch"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtContentPost"
                        style="@style/TvBody"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:gravity="top"
                        android:hint="@string/hint_input_share_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="2">
                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnAddMedia"
                    android:layout_width="@dimen/size_220"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/background_choose_branch"
                    android:padding="@dimen/padding_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp">
                    <ImageView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/main_bg"/>
                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_image_video"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnUpload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark_60"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <vn.techres.line.widget.TechResTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uploading_please"
            android:textColor="@color/white"
            android:textSize="@dimen/font_huge"
            android:layout_marginBottom="@dimen/margin_20dp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/size_300"
            android:layout_height="@dimen/size_300"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"
            app:lottie_fileName="loadingcreatepostreview.json"/>
    </LinearLayout>
</RelativeLayout>



