<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <merge>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/transparent"
            android:id="@+id/lnImageVideoShare">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOneShare"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                app:cardCornerRadius="@dimen/size_10"
                app:cardElevation="@dimen/size_0"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgOneShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imgOnePlayShare"
                    android:layout_width="@dimen/size_25"
                    android:layout_height="@dimen/size_25"
                    android:layout_gravity="center"
                    android:background="@drawable/play_video"
                    tools:ignore="ContentDescription"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTwoShare"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                app:cardCornerRadius="@dimen/size_10"
                app:cardElevation="@dimen/size_0"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgTwoShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imgTwoPlayShare"
                    android:layout_width="@dimen/size_25"
                    android:layout_height="@dimen/size_25"
                    android:layout_gravity="center"
                    android:background="@drawable/play_video"
                    tools:ignore="ContentDescription"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvThreeShare"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                app:cardCornerRadius="@dimen/size_10"
                app:cardElevation="@dimen/size_0"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgThreeShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imgThreePlayShare"
                    android:layout_width="@dimen/size_25"
                    android:layout_height="@dimen/size_25"
                    android:layout_gravity="center"
                    android:background="@drawable/play_video"
                    tools:ignore="ContentDescription"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFourShare"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                app:cardElevation="@dimen/size_0"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgFourShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imgFourPlayShare"
                    android:layout_width="@dimen/size_25"
                    android:layout_height="@dimen/size_25"
                    android:layout_gravity="center"
                    android:background="@drawable/play_video"
                    tools:ignore="ContentDescription"
                    android:visibility="gone" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvCountImageShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/font_largexxxxxx"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </merge>

</layout>