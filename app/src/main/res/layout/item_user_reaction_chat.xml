<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/ayp_8dp"
            android:paddingBottom="@dimen/ayp_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_marginStart="@dimen/ayp_8dp"
                android:layout_width="@dimen/size_32"
                android:layout_height="@dimen/size_32"
                android:scaleType="centerCrop"/>

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/txtUsername"
                android:layout_marginStart="@dimen/ayp_8dp"
                android:maxLines="1"
                android:maxWidth="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/revoke"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/ayp_8dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgEmoji6"
                        android:layout_width="@dimen/size_16"
                        android:layout_height="@dimen/size_16"
                        android:layout_marginStart="@dimen/ayp_8dp"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgEmoji5"
                        android:layout_width="@dimen/size_16"
                        android:layout_height="@dimen/size_16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgEmoji4"
                        android:layout_width="@dimen/size_16"
                        android:layout_height="@dimen/size_16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgEmoji3"
                        android:layout_width="@dimen/size_16"
                        android:layout_height="@dimen/size_16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgEmoji2"
                        android:layout_width="@dimen/size_16"
                        android:layout_height="@dimen/size_16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgEmoji1"
                        android:layout_width="@dimen/size_16"
                        android:layout_height="@dimen/size_16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone" />

                    <vn.techres.line.widget.TechResTextView
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/ayp_8dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="@dimen/size_16"
            android:background="@color/grey_line_" />
    </LinearLayout>
</layout>
