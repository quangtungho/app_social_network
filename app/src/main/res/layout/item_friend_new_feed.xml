<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/size_5"
        android:background="@drawable/corner_white_5dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/size_120"
                android:scaleType="centerCrop"
                android:contentDescription="@string/description_place_image"
                android:src="@color/blue" />

            <vn.techres.line.widget.TechResTextViewBold
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_tiny"
                android:maxLines="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="@dimen/padding_5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvFriendTogether"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_tiny"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_5dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:layout_marginEnd="@dimen/margin_5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent">

                        <RelativeLayout
                            android:id="@+id/rlFriendOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent"
                            android:visibility="visible">

                            <View
                                android:layout_width="@dimen/size_16"
                                android:layout_height="@dimen/size_16"
                                android:background="@drawable/circle_white" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/size_14"
                                android:layout_height="@dimen/size_14"
                                app:cardCornerRadius="@dimen/size_7"
                                android:layout_centerInParent="true"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/imgFriendOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/logo_aloline_placeholder"
                                    android:contentDescription="@string/default_image"
                                    tools:ignore="TooDeepLayout"
                                    android:scaleType="centerCrop" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlFriendTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_12dp">

                            <View
                                android:layout_width="@dimen/size_16"
                                android:layout_height="@dimen/size_16"
                                android:background="@drawable/circle_white" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/size_14"
                                android:layout_height="@dimen/size_14"
                                app:cardCornerRadius="@dimen/size_7"
                                android:layout_centerInParent="true"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/imgFriendTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/default_image"
                                    tools:ignore="TooDeepLayout"
                                    android:scaleType="centerCrop" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlFriendThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_24dp">

                            <View
                                android:layout_width="@dimen/size_16"
                                android:layout_height="@dimen/size_16"
                                android:background="@drawable/circle_white" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/size_14"
                                android:layout_height="@dimen/size_14"
                                app:cardCornerRadius="@dimen/size_7"
                                android:layout_centerInParent="true"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/imgFriendThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/default_image"
                                    tools:ignore="TooDeepLayout"
                                    android:scaleType="centerCrop" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlFriendFour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent"
                            android:visibility="gone"
                            android:layout_marginStart="54dp">

                            <View
                                android:layout_width="@dimen/size_22"
                                android:layout_height="@dimen/size_22"
                                android:background="@drawable/circle_white" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                app:cardCornerRadius="@dimen/size_10"
                                android:layout_centerInParent="true"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/imgFriendFour"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/logo_aloline_placeholder"
                                    android:contentDescription="@string/default_image"
                                    tools:ignore="TooDeepLayout"
                                    android:scaleType="centerCrop" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnAddFriend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_22"
                android:layout_gravity="center"
                android:background="@drawable/border_orange_50dp"
                android:text="@string/add_friend"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_tiny"
                android:visibility="visible"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/padding_5dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_20dp" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/tvSentRequest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_22"
                android:gravity="center"
                android:text="@string/sent_friend"
                android:textSize="@dimen/font_tiny"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_5dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>