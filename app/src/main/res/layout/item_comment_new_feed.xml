<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_view_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_12dp"
    android:paddingTop="@dimen/padding_8dp"
    android:paddingRight="@dimen/padding_12dp"
    android:paddingBottom="@dimen/padding_8dp"
    android:id="@+id/item">

    <ImageView
        android:id="@+id/imgAvatarGroup"
        android:layout_width="@dimen/size_44"
        android:layout_height="@dimen/size_44" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:background="@drawable/bg_round_rectangle_border_big"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_12dp"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_12dp"
        android:paddingBottom="@dimen/padding_8dp"
        tools:ignore="RtlHardcoded">

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/tvName"
            style="@style/TvSubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_4dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="aaaa"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/imgAvatarListComment"
            app:layout_constraintTop_toTopOf="@+id/imgAvatarListComment" />

        <vn.techres.line.widget.TechResTextView
            style="@style/TvCaption"
            android:id="@+id/txtDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            app:layout_constraintLeft_toRightOf="@+id/imgAvatarListComment"
            app:layout_constraintTop_toBottomOf="@+id/tvNameListComment" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/txtContent"
            style="@style/TvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatarListComment" />
    </LinearLayout>
</LinearLayout>
