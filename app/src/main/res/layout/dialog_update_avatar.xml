<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding_20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/size_350"
            android:layout_height="@dimen/size_450">
            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_update_avatar"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="-16dp" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/techResTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_avatar_title"
                android:textColor="@color/main_bg"
                android:textSize="@dimen/font_largexxx"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.683" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/techResTextView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20dp"
                android:gravity="center"
                android:text="@string/update_avatar_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/techResTextView7" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="@dimen/size_140"
                android:layout_height="@dimen/size_140"
                android:layout_marginTop="@dimen/margin_50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_120"
                    android:layout_height="@dimen/size_120"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin_10dp"
                    android:src="@drawable/border_circle_orange"
                    tools:ignore="ContentDescription" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/size_110"
                    android:layout_height="@dimen/size_110"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin_10dp"
                    app:cardCornerRadius="@dimen/size_55"
                    app:cardElevation="0dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user_placeholder"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/padding_5dp"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    app:tint="@color/black" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_margin="@dimen/margin_20dp"
                android:background="@drawable/bg_btn_login"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/ic_messenger_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/padding_8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>