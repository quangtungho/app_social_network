<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp"
        android:background="@drawable/overlay_transition">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/size_64"
                        android:layout_height="@dimen/size_64"
                        android:src="@drawable/ic_bill"
                        android:padding="@dimen/padding_16dp"
                        android:background="@drawable/circle_blue"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_12dp"
                        android:orientation="vertical">

                        <vn.techres.line.widget.TechResTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:text="Bạn vừa hoàn tất hoá đơn"
                            android:textColor="@color/blue"
                            android:textAllCaps="true"/>

                        <vn.techres.line.widget.TechResTextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày 6/4/2022 vào lúc 10:32:10" />

                        <vn.techres.line.widget.TechResTextViewBold
                            android:id="@+id/txtMoney"
                            android:textAllCaps="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_bg"
                            android:text="Tổng tiền : 500,000 VNĐ" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_marginStart="@dimen/margin_4dp"
                    android:layout_marginEnd="@dimen/margin_4dp" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/txtNameRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:textColor="@color/black"/>

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_40dp"
                    android:layout_marginStart="@dimen/margin_8dp"/>

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_40dp"
                    android:layout_marginStart="@dimen/margin_8dp" />

                <vn.techres.line.widget.TechResTextViewBold
                    android:id="@+id/clickDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAllCaps="true"
                    android:textColor="@color/main_bg"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:text="@string/see_more" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>