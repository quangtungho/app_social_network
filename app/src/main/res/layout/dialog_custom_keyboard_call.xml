<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_call_keyboard_video"
        android:padding="@dimen/_16sdp">

        <ImageView
            android:id="@+id/btnFlipCam"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/default_image"
            android:src="@drawable/ic_call_flip_cam_selector"
            app:layout_constraintEnd_toStartOf="@+id/btnSplitScreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/tvNameMinimizeCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/reverse"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/btnFlipCam"
            app:layout_constraintStart_toStartOf="@+id/btnFlipCam"
            app:layout_constraintTop_toBottomOf="@+id/btnFlipCam" />

        <ImageView
            android:id="@+id/btnCamera"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/default_image"
            android:src="@drawable/incall_off_camera_button_selector"
            app:layout_constraintEnd_toStartOf="@+id/btnMicCall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameMinimizeCall" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/tvNameCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/camera"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/btnCamera"
            app:layout_constraintStart_toStartOf="@+id/btnCamera"
            app:layout_constraintTop_toBottomOf="@+id/btnCamera" />

        <ImageView
            android:id="@+id/btnSplitScreen"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/default_image"
            android:src="@drawable/incall_split_screen_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnFlipCam"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/tvSplitScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/half"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/btnSplitScreen"
            app:layout_constraintStart_toStartOf="@+id/btnSplitScreen"
            app:layout_constraintTop_toBottomOf="@+id/btnSplitScreen" />

        <ImageView
            android:id="@+id/btnMicCall"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/default_image"
            android:src="@drawable/incall_btn_mute_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnCamera"
            app:layout_constraintTop_toBottomOf="@+id/tvSplitScreen" />
        <vn.techres.line.widget.TechResTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/micro"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/btnMicCall"
            app:layout_constraintStart_toStartOf="@+id/btnMicCall"
            app:layout_constraintTop_toBottomOf="@+id/btnMicCall" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>