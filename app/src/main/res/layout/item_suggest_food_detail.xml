<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_210"
        app:cardCornerRadius="@dimen/size_10"
        android:layout_margin="@dimen/margin_8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_210">

            <ImageView
                android:id="@+id/imgAvatarFood"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150"
                android:src="@drawable/food_demo"
                android:contentDescription="@string/default_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/tvNameFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Khoai TâyKhoai TâyKhoai TâyKhoai TâyKhoai TâyKhoai TâyKhoai TâyKhoai Tây"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgAvatarFood" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/tvRatingFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_star_line_24"
                android:drawablePadding="@dimen/padding_4dp"
                android:drawableTint="@color/main_bg"
                android:gravity="center"
                android:text="4.8"
                android:textColor="@color/main_bg"
                android:textSize="@dimen/font_normal"
                app:layout_constraintBottom_toBottomOf="@+id/imgAvatarFood"
                app:layout_constraintStart_toStartOf="parent" />

            <vn.techres.line.widget.TechResTextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="120.000đ"
                android:textColor="@color/main_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>