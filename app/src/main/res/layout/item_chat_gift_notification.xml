<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:background="@drawable/corners_white_8dp">

        <ImageView
            android:id="@+id/imgGiftBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bannervoucher" />

        <vn.techres.line.widget.TechResTextViewBold
            android:id="@+id/txtGiftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:textAllCaps="true" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/txtGiftContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:textColor="@color/black" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/txtExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/lnReceiveGift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10dp"
                app:cardCornerRadius="@dimen/size_16"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/imgGiftAvatar"
                    android:layout_width="@dimen/size_32"
                    android:layout_height="@dimen/size_32"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <vn.techres.line.widget.TechResTextViewBold
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ‘‰ Sá»¬ Dá»¤NG QUÃ€ NGAY THÃ”I!"
                android:textColor="@color/blue_logo" />
        </LinearLayout>
    </LinearLayout>
</layout>