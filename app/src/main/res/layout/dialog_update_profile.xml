<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="@dimen/size_350"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corners_white_8dp">
        <ImageView
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:src="@drawable/logo_aloline_placeholder"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_25dp"/>
        <vn.techres.line.widget.TechResTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn Nhận được 10 value"
            android:textSize="@dimen/font_big"
            android:layout_gravity="center"
            android:textColor="@color/blue_logo"/>
        <vn.techres.line.widget.TechResTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_avatar"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/margin_16dp"/>
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:text="@string/update_comment"
            android:background="@drawable/border_blue_50dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_16dp"/>
    </LinearLayout>
</LinearLayout>