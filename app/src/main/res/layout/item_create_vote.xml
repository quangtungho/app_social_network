<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <vn.techres.line.widget.TechResEditText
            android:id="@+id/edtPlan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgRemovePlan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgRemovePlan"
            android:layout_width="@dimen/size_15"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:contentDescription="@string/default_image"
            android:src="@drawable/ic_close_12dp"
            app:layout_constraintBottom_toBottomOf="@+id/edtPlan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edtPlan"
            app:layout_constraintTop_toTopOf="@+id/edtPlan" />

        <View
            android:id="@+id/view18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@color/main_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPlan" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>