<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:background="@color/gray_background"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <vn.techres.line.widget.TechResTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/title_delivered_to"
                    android:textSize="@dimen/font_largexxx" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvChangeAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/title_change_address"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnAddCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_10dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
                tools:layout_editor_absoluteX="10dp">

                <vn.techres.line.widget.TechResTextViewBold
                    android:id="@+id/tvAddressItemCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textSize="@dimen/font_large"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:orientation="horizontal">

                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/title_note_address"
                        android:textSize="@dimen/font_normal" />

                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_note_pen" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/View1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@color/gray_background"
                app:layout_constraintTop_toBottomOf="@+id/lnAddCart" />

            <LinearLayout
                android:id="@+id/linearLayout14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_margin="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/View1"
                tools:layout_editor_absoluteX="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/title_delivery_time"
                        android:textSize="@dimen/font_normal"
                        tools:ignore="NestedWeights" />

                    <vn.techres.line.widget.TechResTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/title_delivery_now"
                        android:textSize="@dimen/font_large"/>
                </LinearLayout>

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/title_change"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/gray_background"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

                <vn.techres.line.widget.TechResTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/title_order_summary"
                    android:textSize="@dimen/font_largexxx"/>

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/title_add_food"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcFoodOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_background"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingEnd="@dimen/padding_5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout16" />

            <View
                android:id="@+id/View2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@color/gray_background"
                app:layout_constraintTop_toBottomOf="@+id/rcFoodOrder" />

            <LinearLayout
                android:id="@+id/linearLayout17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_margin="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/View2"
                tools:layout_editor_absoluteX="10dp"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/title_total_provisional"
                        android:textSize="@dimen/font_normal"
                        tools:ignore="NestedWeights" />

                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_info"
                        android:drawablePadding="@dimen/padding_10dp"
                        android:text="@string/title_fees_apply"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <vn.techres.line.widget.TechResTextView
                        android:id="@+id/tvTotalProvisional"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="@string/title_price"
                        android:textSize="@dimen/font_normal"
                        tools:ignore="NestedWeights" />

                    <vn.techres.line.widget.TechResTextView
                        android:id="@+id/tvFeesApply"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="@string/title_price"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/gray_background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

                <vn.techres.line.widget.TechResTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:text="@string/title_payment_methods"
                    android:textSize="@dimen/font_largexxx" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5dp"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout18"
                tools:layout_editor_absoluteX="10dp">

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_funds"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_10dp"
                    android:text="@string/title_cash"
                    android:textSize="@dimen/font_large" />

                <View
                    android:layout_width="@dimen/size_2"
                    android:layout_height="match_parent"
                    android:background="@color/gray_background" />

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:padding="@dimen/padding_10dp"
                    android:text="@string/title_more_promotion"
                    android:textSize="@dimen/font_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:background="@color/gray_background"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout19" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="2"
            tools:ignore="NestedWeights">

            <vn.techres.line.widget.TechResTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_total"
                android:textSize="@dimen/font_largexxx" />

            <vn.techres.line.widget.TechResTextViewBold
                android:id="@+id/tvToTalOrderComForm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text="@string/title_price"
                android:textSize="@dimen/font_largexxxx"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="2"
            android:background="@drawable/corners_orange_4dp"
            android:text="@string/order_food"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>