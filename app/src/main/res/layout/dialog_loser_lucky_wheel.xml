<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_400"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_button_orange_radius">

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_50"
            android:src="@drawable/ribbon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ctlContainer"
            app:layout_constraintBottom_toTopOf="@+id/ctlContainer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>