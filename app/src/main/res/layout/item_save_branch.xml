<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardElevation="@dimen/size_10"
        app:cardCornerRadius="@dimen/size_5"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginEnd="@dimen/margin_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSaveBranch"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_margin="@dimen/margin_10dp"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <vn.techres.line.widget.TechResTextView
                        android:id="@+id/tvNameSaveBranch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:layout_weight="4"
                        android:textSize="@dimen/font_normal"
                        android:textColor="@color/black"
                        tools:ignore="RtlHardcoded"
                        android:layout_marginEnd="@dimen/margin_10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/border_orange_50dp"
                        android:paddingStart="@dimen/padding_7dp"
                        android:paddingEnd="@dimen/padding_7dp"
                        android:paddingTop="@dimen/padding_2dp"
                        android:paddingBottom="@dimen/padding_2dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <ImageView
                            android:layout_width="@dimen/size_12"
                            android:layout_height="@dimen/size_12"
                            android:src="@drawable/ic_star"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/txtRatingBranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvBranchAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded"
                    android:paddingEnd="@dimen/padding_5dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
