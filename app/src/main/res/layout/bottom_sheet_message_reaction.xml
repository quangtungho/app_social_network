<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/ayp_8dp"
            android:layout_marginTop="@dimen/ayp_8dp"
            android:layout_marginEnd="@dimen/ayp_8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/reaction_popup_shadow"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/like_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="@dimen/padding_8dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingBottom="@dimen/padding_8dp"
                android:orientation="vertical"
                android:src="@drawable/ic_like"
                android:background="@color/transparent"
                tools:ignore="NestedWeights" />

            <ImageButton
                android:id="@+id/love_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/ayp_8dp"
                android:gravity="center"
                android:background="@color/transparent"
                android:src="@drawable/ic_heart" />

            <ImageButton
                android:id="@+id/smile_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/ayp_8dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_smile" />

            <ImageButton
                android:id="@+id/wow_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/ayp_8dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_wow" />

            <ImageButton
                android:id="@+id/angry_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/ayp_8dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_angry" />

            <ImageButton
                android:id="@+id/sad_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/ayp_8dp"
                android:paddingBottom="@dimen/ayp_8dp"
                android:paddingLeft="@dimen/ayp_8dp"
                android:paddingRight="@dimen/size_16"
                android:background="@color/transparent"
                android:src="@drawable/ic_sad" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/revokeReaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayp_8dp"
            android:layout_marginEnd="@dimen/ayp_8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_revoke_reaction"
            android:orientation="horizontal" />
    </LinearLayout>
    <LinearLayout

        android:padding="@dimen/padding_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/bg_bottom_sheet_layout_chat"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="48.0dip"
            android:orientation="horizontal"
            android:paddingTop="4.0dip"
            android:paddingBottom="8.0dip">

            <LinearLayout
                android:id="@+id/llReplyReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/icn_csc_menu_reply_n"
                    app:tint="@color/BlueViolet" />

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_reply"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llShareReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/icn_csc_menu_share" />

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_my_chat"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPinnedReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/icn_csc_menu_newtopic_n" />

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pin"
                    android:textSize="@dimen/font_normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnMessageImportantReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:id="@+id/imgMessageImportant"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_star_line_24"
                    app:tint="@color/main_bg" />

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/important_message"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="48.0dip"
            android:orientation="horizontal"
            android:paddingTop="4.0dip"
            android:paddingBottom="8.0dip">

            <LinearLayout
                android:id="@+id/llInformationReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_info_blue" />

                <vn.techres.line.widget.TechResTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/information"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCopyReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:id="@+id/imgCopy"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/icn_csc_menu_copy_n" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvCopyReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/copy"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDownloadReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:id="@+id/imgDownload"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/icn_csc_menu_download_n" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvDownloadReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRevokeReaction"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/icn_csc_menu_recall_n" />

                <vn.techres.line.widget.TechResTextView
                    android:id="@+id/tvRevokeReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revoke"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>