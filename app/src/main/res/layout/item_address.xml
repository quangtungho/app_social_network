<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDefault"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/default_image"
            android:src="@drawable/ic_outline_watch_later_24" />

        <vn.techres.line.widget.TechResTextViewBold
            android:id="@+id/tvTitleAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_toEndOf="@+id/imgDefault"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black" />

        <vn.techres.line.widget.TechResTextView
            android:id="@+id/tvContentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleAddress"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/imgDefault"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>
</layout>