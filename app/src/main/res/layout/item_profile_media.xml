<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_30"
                android:text="@string/image_image"
                android:background="@drawable/border_gray_40dp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_photo"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnVideo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_30"
                android:text="@string/video_video"
                android:background="@drawable/border_gray_40dp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_photo"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnAlbum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_30"
                android:text="@string/album"
                android:background="@drawable/border_gray_40dp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_photo"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                tools:ignore="ButtonStyle"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/bg_header_main"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp"/>
</LinearLayout>