<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_15dp">

        <ImageView
            android:id="@+id/imgCoverPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_220"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_145"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="@dimen/size_150"
                android:layout_height="@dimen/size_150"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_white"
                android:contentDescription="@string/default_image" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/size_140"
                android:layout_height="@dimen/size_140"
                android:layout_centerInParent="true"
                app:cardCornerRadius="@dimen/size_70">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_image"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </RelativeLayout>

    <vn.techres.line.widget.TechResTextView
        android:id="@+id/txtFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/font_great"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginEnd="@dimen/margin_15dp">
        <LinearLayout
            android:id="@+id/lnProfileFriendly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_35dp"
            android:background="@drawable/background_gray"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_verified_user"
                android:tint="@color/black"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:contentDescription="@string/description_place_image"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friends"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnAddFriendProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_35dp"
            android:background="@drawable/background_gray"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_add_friend"
                android:tint="@color/black"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:contentDescription="@string/description_place_image"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_friend"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnCancelRequestFriendProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_35dp"
            android:background="@drawable/background_gray"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_add_friend"
                android:tint="@color/black"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:contentDescription="@string/description_place_image"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_request_friend"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnReplyFriendProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_35dp"
            android:text="@string/add_friend"
            android:background="@drawable/background_gray"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_add_friend"
                android:tint="@color/black"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:contentDescription="@string/description_place_image"
                tools:ignore="UseAppTint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_accept"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnCreatePostProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_35dp"
            android:text="@string/add_friend"
            android:background="@drawable/corners_orange_4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible">
            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_plus_orange"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:contentDescription="@string/description_place_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_post"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnChatProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_35dp"
            android:background="@drawable/corners_orange_4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_10dp">
            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_comment_nf"
                android:tint="@color/white"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:contentDescription="@string/description_place_image"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgProfileMore"
            android:layout_width="@dimen/margin_45dp"
            android:layout_height="@dimen/margin_35dp"
            android:background="@drawable/background_gray"
            android:src="@drawable/ic_more_notification"
            android:tint="@color/black"
            android:padding="@dimen/padding_8dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:visibility="gone"
            android:contentDescription="@string/description_place_image"
            tools:ignore="UseAppTint" />
    </LinearLayout>
</LinearLayout>