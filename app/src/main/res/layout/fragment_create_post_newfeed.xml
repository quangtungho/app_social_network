<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:src="@drawable/back"
                android:tint="@color/black"
                android:padding="@dimen/padding_15dp"
                tools:ignore="UseAppTint"
                android:contentDescription="@string/description_place_image" />
            <vn.techres.line.widget.TechResTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/create_post"
                android:textSize="@dimen/font_big"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingStart="@dimen/padding_10dp"
                tools:ignore="RtlSymmetry" />
            <Button
                android:id="@+id/tvPost"
                android:layout_width="63dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:background="@drawable/bg_button_orange_radius"
                android:text="@string/post"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40"
                        app:cardCornerRadius="@dimen/size_20"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="@dimen/margin_10dp">
                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/default_image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_placeholder" />
                    </androidx.cardview.widget.CardView>
                    <vn.techres.line.widget.TechResTextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_12dp"
                    android:paddingTop="@dimen/padding_8dp"
                    android:paddingRight="@dimen/padding_12dp"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:layout_margin="@dimen/margin_12dp"
                    android:background="@drawable/background_choose_branch"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtTitle"
                        style="@style/TvBody"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@color/white_color"
                        android:gravity="top"
                        android:hint="@string/hint_input_title_post"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="2"
                        android:maxLength="250">
                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_12dp"
                    android:paddingTop="@dimen/padding_8dp"
                    android:paddingRight="@dimen/padding_12dp"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:background="@drawable/background_choose_branch"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtContentPost"
                        style="@style/TvBody"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:gravity="top"
                        android:hint="@string/hint_input_share_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="2"
                        android:paddingBottom="@dimen/padding_20dp">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnAddMediaPost"
                    android:layout_width="@dimen/size_220"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/background_choose_branch"
                    android:padding="@dimen/padding_10dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp">
                    <ImageView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/main_bg"
                        tools:ignore="UseAppTint"
                        android:contentDescription="@string/description_place_image" />
                    <vn.techres.line.widget.TechResTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_image_video"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_margin="@dimen/size_100"/>
                <RelativeLayout
                    android:id="@+id/rlLinkPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/margin_20dp">
                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_200"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/imgPreview"
                        tools:ignore="NotSibling"
                        android:background="@color/gray_background"
                        android:padding="@dimen/padding_10dp">
                        <vn.techres.line.widget.TechResTextView
                            android:id="@+id/site_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small"
                            android:textAllCaps="true"/>

                        <vn.techres.line.widget.TechResTextViewBold
                            android:id="@+id/title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/desc_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_tv"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/imgBtnClose"
                        android:layout_width="@dimen/size_25"
                        android:layout_height="@dimen/size_25"
                        android:background="@drawable/ic_messenger_close"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/margin_5dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lnMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/item_media_one"/>
                    <include layout="@layout/item_media_two"/>
                    <include layout="@layout/item_media_three"/>
                    <include layout="@layout/item_media_four"/>
                    <include layout="@layout/item_media_five"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnUpload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark_60"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <vn.techres.line.widget.TechResTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uploading_please"
            android:textColor="@color/white"
            android:textSize="@dimen/font_huge"
            android:layout_marginBottom="@dimen/margin_20dp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/size_300"
            android:layout_height="@dimen/size_300"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"
            app:lottie_fileName="loadingcreatepostreview.json"/>
    </LinearLayout>
</RelativeLayout>
