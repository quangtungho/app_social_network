<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/size_5"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llSendContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="5.0dip"
            android:layout_marginEnd="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/shape_send_game"
            android:minHeight="40.0dip"
            android:orientation="horizontal"
            android:paddingStart="12.0dip"
            android:paddingEnd="10.0dip">

            <EditText
                android:id="@+id/edtSendMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_marginEnd="12.0dip"
                android:imeOptions="actionSend|flagNoEnterAction"
                android:windowSoftInputMode="adjustPan"
                android:background="@null"
                android:hint="Nhập tin nhắn"
                android:textColor="@color/white"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:paddingStart="5.0dip"
                android:textColorHint="#ffc4c0bd"
                android:textSize="18.0sp"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:id="@+id/btAttach"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@+id/edtSendMessage"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_emoji_input" />

        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSendMessage"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="bottom"
        android:layout_marginEnd="5.0dip"
        android:src="@drawable/ic_send_message"
        android:tint="@color/white" />


</LinearLayout>
